<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fr.xgouchet.xmleditor.ui.widget.ClearableEditText
        android:id="@+id/edit_text_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/ui_hint_name"
        android:inputType="textNoSuggestions"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp" >

        <requestFocus />
    </fr.xgouchet.xmleditor.ui.widget.ClearableEditText>

    <fr.xgouchet.xmleditor.ui.widget.ClearableEditText
        android:id="@+id/edit_text_instructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_text_target"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/ui_hint_content"
        android:inputType="textMultiLine"
        android:textAppearance="@android:style/TextAppearance.Medium" >
    </fr.xgouchet.xmleditor.ui.widget.ClearableEditText>

</RelativeLayout>