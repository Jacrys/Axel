<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AxelHelpActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            style="@style/Axel.TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ui_help" />

        <TextView
            style="@style/Axel.TextView.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_edit_title" />

        <TextView
            style="@style/Axel.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_edit_content" />

        <TextView
            style="@style/Axel.TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_preview_title" />

        <TextView
            style="@style/Axel.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_preview_content" />

        <TextView
            style="@style/Axel.TextView.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_format_title" />

        <TextView
            style="@style/Axel.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_format_content" />

        <TextView
            style="@style/Axel.TextView.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_binary_title" />

        <TextView
            style="@style/Axel.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_binary_content" />
    </LinearLayout>

</ScrollView>